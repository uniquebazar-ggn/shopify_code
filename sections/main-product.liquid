    // Get product name dynamically from Shopify
    function getProductName() {
      // Try multiple methods to get product name
      const metaTitle = document.querySelector('meta[property="og:title"]');
      const h1Title = document.querySelector('h1.product-title, h1.product__title, .product-single__title, h1');
      const pageTitle = document.title;
      
      if (metaTitle && metaTitle.content) {
        return metaTitle.content.split('|')[0].trim();
      } else if (h1Title) {
        return h1Title.textContent.trim();
      } else {
        return pageTitle.split('|')[0].trim();
      }
    }
    
    // Elements
    const inquiryBtn = document.getElementById('whatsappInquiryBtn');
    const popup = document.getElementById('whatsappPopup');
    const form = document.getElementById('whatsappForm');
    const cancelBtn = document.getElementById('cancelBtn');
    
    // Open popup
    inquiryBtn.addEventListener('click', function() {
      popup.classList.add('active');
      document.getElementById('quantity').focus();
    });
    
    // Close popup
    cancelBtn.addEventListener('click', function() {
      popup.classList.remove('active');
      form.reset();
    });
    
    // Close on overlay click
    popup.addEventListener('click', function(e) {
      if (e.target === popup) {
        popup.classList.remove('active');
        form.reset();
      }
    });
    
    // Handle form submission
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      
      const quantity = document.getElementById('quantity').value.trim();
      const location = document.getElementById('location').value.trim();
      const productLink = window.location.href;
      
      // Validate inputs
      if (!quantity || !location) {
        alert('Please fill in all fields');
        return;
      }
      
      const productName = getProductName();
      
      const message = `Hi, I want to order: ${productName} \n Quantity: ${quantity} \n Location: ${location} \n\n Product Link: ${productLink}`;
      const encodedMessage = encodeURIComponent(message);

      const whatsappURL = 'https://api.whatsapp.com/send?phone=918178191882&text=' + encodedMessage;

      window.location.href = whatsappURL;

      // Debug: Show URL in console
      console.log('WhatsApp URL:', whatsappURL);
      console.log('Product Name:', productName);
      console.log('Message:', message);
      
      // Try multiple methods to open WhatsApp
      try {
        // Method 1: Open in new tab
        const newWindow = window.open(whatsappURL, '_blank');
        
        // Method 2: If popup blocked, try direct navigation
        if (!newWindow || newWindow.closed || typeof newWindow.closed === 'undefined') {
          window.location.href = whatsappURL;
        }
      } catch (error) {
        console.error('Error opening WhatsApp:', error);
        // Fallback: Direct navigation
        window.location.href = whatsappURL;
      }
      
      // Close popup and reset form after a short delay
      setTimeout(function() {
        popup.classList.remove('active');
        form.reset();
      }, 500);
    });
    
    // Close popup on ESC key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && popup.classList.contains('active')) {
        popup.classList.remove('active');
        form.reset();
      }
    });
